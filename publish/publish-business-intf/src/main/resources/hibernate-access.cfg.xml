<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">access</property>
        <property name="hibernate.connection.url">jdbc:h2:c:/environment/database/h2/access</property>
        <property name="hibernate.connection.username">access</property>
        <property name="hibernate.default_schema">ACCESS</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <mapping class="br.com.jlabs.project.entity.User" />
        <mapping class="br.com.jlabs.project.entity.Group" />
        <mapping class="br.com.jlabs.project.entity.Project" />
        </session-factory>
</hibernate-configuration>
