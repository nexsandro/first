<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:web="http://java.sun.com/xml/ns/javaee"
	version="2.5">

	<display-name>Publish Web</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref id="driveds-ref">
		<description>Primary database</description>
		<res-ref-name>jdbc/DefaultDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<servlet>
        <servlet-name>SpringDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>classpath:/registry-publish.xml</param-value>
	    </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>SpringDispatcher</servlet-name>
        <url-pattern>/control/*</url-pattern>
    </servlet-mapping>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/control/*</url-pattern>
	</filter-mapping> 

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Resources</web-resource-name>
			<description>Restrict resources for Publish Application</description>
			<url-pattern>/control/sec/*</url-pattern>
			<url-pattern>/control/rest/*</url-pattern>
			<url-pattern>/control/index</url-pattern>
		</web-resource-collection>

		<auth-constraint>
			<description>Valid profiles for Publish application</description>
			<role-name>User</role-name>
			<role-name>Admin</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/control/common/login?method=login</form-login-page>
			<form-error-page><![CDATA[/control/common/login?method=login&errorLogin=true]]></form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>User</role-name>
	</security-role>	
	<security-role>
		<role-name>Admin</role-name>
	</security-role>	

</web-app>
